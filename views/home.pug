extends master-template.pug 

block head 
    title Home page
    style.
        body{
            background-color: #f2f2f2; 
        }
        .page-content{
            background-color: white; 
        }
block body
    div(class="container-fluid")
        div(class="row sticky-top")
            div(class="col-10 mx-auto mt-3")
                ul(class="nav nav-pills nav-fill page-content",id="pills-tab",role="tablist")
                    li(class="nav-item")
                        a(class="nav-link active",id="pills-feed-tab",data-toggle="pill",href="#pills-feed",role="tab",aria-controls="pills-feed",aria-selected="true") Feed
                    li(class="nav-item")
                        a(class="nav-link",id="pills-search-tab",data-toggle="pill",href="#pills-search",role="tab",aria-controls="pills-search",aria-selected="false") Search
                    li(class="nav-item")
                        a(class="nav-link",id="pills-friends-tab",data-toggle="pill",href="#pills-friends",role="tab",aria-controls="pills-friends",aria-selected="false") Friends
                    li(class="nav-item")
                        a(class="nav-link",id="pills-profile-tab",data-toggle="pill",href="#pills-profile",role="tab",aria-controls="pills-profile",aria-selected="false") Profile
                    li(class="nav-item")
                        a(class="nav-link",href="/logout",role="tab",aria-controls="pills-profile",aria-selected="false") Logout 

        div(class="row")    
            div(class="col-10 mx-auto mt-3")
                div(class="tab-content page-content",id="pills-tabContent")
                    div(class="tab-pane fade show active",id="pills-feed",role="tabpanel",aria-labelledby="pills-feed-tab")
                        div(class="row")
                            div(class="col-12 mx-auto")
                                div panel 1
                    div(class="tab-pane fade",id="pills-search",role="tabpanel",aria-labelledby="pills-search-tab")
                        div(class="row")
                            div(class="col-12 mx-auto")
                                div(class="input-group mb-3") 
                                    input(type="text",id="searchBar",class="form-control",placeholder="Search site",aria-label="Search site",aria-describedby="basic-addon2")
                                    div(class="input-group-append")
                                        button(class="btn btn-outline-secondary",id="search",type="button") Search
                    div(class="tab-pane fade",id="pills-friends",role="tabpanel",aria-labelledby="pills-friends-tab")
                        div(class="row")
                            div(class="col-12 mx-auto")
                                div panel 3
                    div(class="tab-pane fade",id="pills-profile",role="tabpanel",aria-labelledby="pills-profile-tab")
                        div(class="row")
                            div(class="col-12 mx-auto")
                                div panel 4
                